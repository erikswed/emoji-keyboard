<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Emoji">
        <attr name="emojiSize" format="dimension"/>
        <attr name="emojiAlignment" format="enum">
            <enum name="bottom" value="0"/>
            <enum name="baseline" value="1"/>
        </attr>
        <attr name="emojiTextStart" format="integer"/>
        <attr name="emojiTextLength" format="integer"/>
        <attr name="emojiUseSystemDefault" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TelegramPanelView">
        <attr name="rsc_emoji_tab_indicator" format="reference|color"/>
        <attr name="rsc_emoji_tab_bkg" format="reference|color"/>
        <attr name="rsc_emoji_layout_bkg" format="reference|color"/>
        <attr name="rsc_bottom_panel_bkg" format="reference|color"/>
        <attr name="rsc_bottom_panel_accent" format="reference|color"/>
        <attr name="Emojilibrary_hintText" format="reference|string"/>
        <attr name="Emojilibrary_textColor" format="reference|color"/>
        <attr name="Emojilibrary_textColorHint" format="reference|color"/>
        <attr name="Emojilibrary_audioTextColor" format="reference|color"/>
        <attr name="Emojilibrary_attachIconColor" format="reference|color"/>
        <attr name="Emojilibrary_audioIconColor" format="reference|color"/>
        <attr name="Emojilibrary_sendIconColor" format="reference|color"/>
    </declare-styleable>
</resources>